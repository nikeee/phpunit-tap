<?xml version="1.0" encoding="UTF-8"?>
<phpunit>
  <extensions>
    <bootstrap class="nikeee\PhpunitTap\TapExtension">
      <parameter name="fileName" value="output.tap"/>
    </bootstrap>
  </extensions>
  <testsuites>
    <testsuite name="All">
      <directory>tests</directory>
      <file>tests/**/*Test.php</file>
    </testsuite>
  </testsuites>
</phpunit>
